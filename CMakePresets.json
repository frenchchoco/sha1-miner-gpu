{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_POLICY_DEFAULT_CMP0144": "NEW",
        "CMAKE_POLICY_DEFAULT_CMP0167": "OLD"
      }
    },
    {
      "name": "windows-vcpkg-base",
      "hidden": true,
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      },
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/vcpkg"
      }
    },
    {
      "name": "windows-ninja-release",
      "displayName": "Windows Release (CUDA + Ninja)",
      "inherits": "windows-vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_HIP": "OFF",
        "CMAKE_CUDA_ARCHITECTURES": "50;75;80;86"
      }
    },
    {
      "name": "windows-ninja-debug",
      "displayName": "Windows Debug (CUDA + Ninja)",
      "inherits": "windows-vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_HIP": "OFF",
        "CMAKE_CUDA_ARCHITECTURES": "50"
      }
    },
    {
      "name": "windows-vs2022-release",
      "displayName": "Windows Release (VS 2022)",
      "inherits": "windows-vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "binaryDir": "${sourceDir}/build/vs2022-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_HIP": "OFF",
        "CMAKE_CUDA_ARCHITECTURES": "50;75;80;86"
      }
    },
    {
      "name": "windows-vs2022-debug",
      "displayName": "Windows Debug (VS 2022)",
      "inherits": "windows-vcpkg-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "binaryDir": "${sourceDir}/build/vs2022-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_HIP": "OFF",
        "CMAKE_CUDA_ARCHITECTURES": "50"
      }
    },
    {
      "name": "windows-hip-release",
      "displayName": "Windows Release (HIP/ROCm + Ninja)",
      "inherits": "windows-vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/hip-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_HIP": "ON",
        "CMAKE_HIP_ARCHITECTURES": "gfx900;gfx906;gfx908;gfx90a;gfx1010;gfx1012;gfx1030;gfx1031;gfx1032;gfx1034;gfx1035;gfx1036;gfx1100;gfx1101;gfx1102;gfx1103;gfx1200;gfx1201"
      },
      "environment": {
        "ROCM_PATH": "$env{ROCM_PATH}",
        "HIP_PATH": "$env{ROCM_PATH}"
      }
    },
    {
      "name": "windows-hip-debug",
      "displayName": "Windows Debug (HIP/ROCm + Ninja)",
      "inherits": "windows-vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/hip-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_HIP": "ON",
        "CMAKE_HIP_ARCHITECTURES": "gfx900;gfx906;gfx908;gfx90a;gfx1010;gfx1012;gfx1030;gfx1031;gfx1032;gfx1034;gfx1035;gfx1036;gfx1100;gfx1101;gfx1102;gfx1103;gfx1200;gfx1201"
      },
      "environment": {
        "ROCM_PATH": "$env{ROCM_PATH}",
        "HIP_PATH": "$env{ROCM_PATH}"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-release",
      "displayName": "Windows Release Build",
      "configurePreset": "windows-ninja-release",
      "jobs": 0,
      "targets": ["sha1_miner"]
    },
    {
      "name": "windows-debug",
      "displayName": "Windows Debug Build",
      "configurePreset": "windows-ninja-debug",
      "jobs": 0,
      "targets": ["sha1_miner"]
    },
    {
      "name": "windows-release-vs",
      "displayName": "Windows Release Build (Visual Studio)",
      "configurePreset": "windows-vs2022-release",
      "configuration": "Release",
      "jobs": 0
    },
    {
      "name": "windows-debug-vs",
      "displayName": "Windows Debug Build (Visual Studio)",
      "configurePreset": "windows-vs2022-debug",
      "configuration": "Debug",
      "jobs": 0
    },
    {
      "name": "windows-hip-release",
      "displayName": "Windows HIP/AMD Release Build",
      "configurePreset": "windows-hip-release",
      "jobs": 0,
      "targets": ["sha1_miner"]
    },
    {
      "name": "windows-hip-debug",
      "displayName": "Windows HIP/AMD Debug Build",
      "configurePreset": "windows-hip-debug",
      "jobs": 0,
      "targets": ["sha1_miner"]
    }
  ],
  "testPresets": [
    {
      "name": "test-windows-release",
      "displayName": "Test Windows Release",
      "configurePreset": "windows-ninja-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-windows-hip-release",
      "displayName": "Test Windows HIP/AMD Release",
      "configurePreset": "windows-hip-release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
